        <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="20" Margin="3,7,0,-7" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="textBox1" HorizontalAlignment="Left" Height="20" Margin="3,32,0,-32" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>

    </Grid>
